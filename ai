#!/bin/bash

config_file="$HOME/.ai_script_config"

if [ "$1" == "-c" ]; then
  rm -f "$config_file"
  echo "API key has been cleared from the configuration."
  exit 0
fi

if [ -f "$config_file" ]; then
  source "$config_file"
fi

if [ -z "$OPENAI_API_KEY" ]; then
  read -p "Enter your OpenAI API key: " api_key
  # Save the API key to the configuration file
  echo "OPENAI_API_KEY=\"$api_key\"" > "$config_file"
  echo "API key has been saved to the configuration file."
  OPENAI_API_KEY="$api_key"  # Set the API key for immediate use
fi

if [ -z "$1" ]; then
  echo "Usage: $0 [-c] <text>"
  exit 1
fi

user_input="I'm using Debian and I want you to reply ONLY with the command to do $1 do not give any comments or anything else but the required command."
request='{
  "model": "gpt-3.5-turbo",
  "messages": [
    {
      "role": "user",
      "content": "'"$user_input"'"
    }
  ],
  "temperature": 1,
  "max_tokens": 256,
  "top_p": 1,
  "frequency_penalty": 0,
  "presence_penalty": 0
}'

response=$(curl -s -X POST https://api.openai.com/v1/chat/completions \
  -H "Content-Type: application/json" \
  -H "Authorization: Bearer $OPENAI_API_KEY" \
  -d "$request")

formatted_response="AI: $(echo "$response" | jq -r '.choices[0].message.content')"

purple="\033[0;35m"
reset="\033[0m"

echo -e "${purple}$formatted_response${reset}"
